<!doctype html>
<html>
	<head>
		<title>Examples - Lumi-Remote</title>
		<script src="/javascripts/jquery-1.7.min.js" type="text/javascript"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="/javascripts/processing-1.4.1.min.js" type="text/javascript"></script>

		<script src="/javascripts/lumi.js" type="text/javascript"></script>
		<script src="/javascripts/processingInterface.js" type="text/javascript"></script>

		<script src="/javascripts/sketches.js" type="text/javascript"></script>

		<link rel="stylesheet" type="text/css" href="./stylesheets/layout.css" />
		<link rel="stylesheet" type="text/css" href="./stylesheets/examples.css" />
		<meta charset="UTF-8" />

	</head>
	<body class="default">
		<div id="menu">
			<a href="./" id="titleText">Lumi-Remote</a>
			<div id="menuContainer">
				<a class="menuItem" href="/">
					Editor
				</a>
				<a class="menuItem" href="/draw.html">
					Draw
				</a>
				<a class="menuItem current" href="/sketches">
					Sketches
				</a>
			</div>
		</div>
		<div id="simArea">
			<div id="sim">
				<div id="simMask"></div>
			</div>
		</div>
		<div id="editArea">
      <ul>
      {{#sketches}}
        <li class="sketch" data-sketch-name="{{name}}" data-sketch-code="{{code}}">
          <div class="sketch-title">
           <h2>{{name}}</h2>
          </div>
          <div class="sketch-desc">
            {{desc}}
          </div>
          <div class="sketch-control-box">
            <button class="sketch-control sketch-run-local">
              <span class="sketch-label">
                Run
              </span>
            </button>
            <button class="sketch-control sketch-run-remote running">
              <span class="sketch-label">
                Run Remote
              </span>
              <img class="run-icon" href="/media/ajaxLoading.gif"/>
            </button>
            <button class="sketch-control sketch-open">
              <span class="sketch-label">
                Open in Editor
              </span>
            </button>
          </div>
        </li>
      {{/sketches}}
      </ul>
    </div>
  </body>
</html>
