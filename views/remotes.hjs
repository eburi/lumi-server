<!doctype html>
<html>
	<head>
		<title>Remotes - Lumi-Remote</title>

		<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />

		<script src="/javascripts/jquery-1.7.min.js" type="text/javascript"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="/javascripts/lumi.js" type="text/javascript"></script>
		<script src="/javascripts/remotes.js" type="text/javascript"></script>
		<meta charset="UTF-8" />

	</head>
	<body class="default">
    <nav>
      <a class="menuItem" href="/">Editor</a>
      <a class="menuItem" href="/draw.html">Draw</a>
      <a class="menuItem" href="/sketches">Sketches</a>
      <a class="menuItem current" href="/remotes">Remotes</a>
    </nav>
		<div id="left">
      <ul>
        <li class="sketch controls">
          <button class="sketch-control sketch-stop-all">Stop All</button>
        </li>
      </ul>
      <ul>
      {{#running}}
        <li class="sketch" data-id="{{id}}">
           <h2>{{name}} [ID: {{id}}]</h2>
          <div class="remotes-control-box">
            <button class="sketch-control sketch-stop" data-id="{{id}}">Stop</button>
          </div>
        </li>
      {{/running}}
      </ul>
    </div>
  </body>
</html>
